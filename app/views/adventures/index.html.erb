<h1>GO ADVENTURE</h1>
<hr>
<div class="row search_fields">
  <%= form_tag adventures_path, :method => 'get' do %>
    <%= select_tag :search_states, options_for_select(us_states) %>
    <%= select_tag :search_category, options_for_select(adventure_categories) %>
    <%= submit_tag "Search", :name => nil, :class => "btn btn-info pull-right" %>
  <% end %>
</div>
<hr>
<div class="row">
 <% @adventures.each do |adventure| %>
    <div class="panel panel-dfault">
      <div class="panel-heading">
        <h3 class="panel-title"><%= link_to adventure.title, adventure_path(adventure) %></h3>
      </div>
      <div class="panel-body">
        <div class="col-sm-10">
          <p><%= adventure.description %></p>
        </div>
        <div class="col-sm-2">
          <p><%= image_tag adventure.photo.url(:thumb)%></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Add A New Adventure", new_adventure_path, :class => "bnt btn-info" %>

<div class="row pull-right">
<%= will_paginate @adventures %>
</div>

